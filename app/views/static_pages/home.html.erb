<!-- Page will display default title -->

<!-- class "home" differentiates home page in custom.scss from the stylings of 
  other pages -->
<div class="home">
<!-- ------------------------------------------------- -->
<!-- GAME STRUCTURES -->
<!-- Add game's canvas, initially hidden because it's only needed when user 
  decides to play the game and clicks play button -->
<canvas id="game-canvas" class="hidden">
Your browser does not support the HTML canvas tag.
</canvas>
<!-- Button click event: press to start the game script-->
<button id="play-button" type="button" onclick="gameArea.tog()">Play</button>
<!-- ------------------------------------------------- -->
<div class="hero-one">

    <!-- <img alt="sun" src="bg_sun.svg" class="sun"/> -->
    <%= image_tag("bg_sun.svg", alt: "sun", class: "sun") %>
    <!-- Text will change when user clicks play button -->
    <p id="demo"> JS Demonstration </p>
    <p id="bull"> Bullets: 0 </p>
</div>

<div class="hero-two">
  <!-- Navigational links -->
  <ul class="links">
    <!-- _blank: link opens in a new tab -->
    <!-- Empty list elements at ends ensure navigation links fully centered -->
    <li></li>

    <li> 
      <!-- Navigation icon (clicking also takes you to path) -->
      <!-- <a href='/Documents/Resume.pdf'>
        <img class="icon" alt="resume icon" src="icon_resume.svg">
      </a> -->
      <%= link_to image_tag("icon_resume.svg", alt: "resume icon", class: "icon"), "/Documents/Resume.pdf"%>
      <!-- Link -->
      <%= link_to "Resume", '/Documents/Resume.pdf'%>
      <!-- Every navigation link has an animated bar under it -->
      <div class="bar1"></div> 
    </li>

    <li> 
      <%= link_to image_tag("icon_blog.svg", alt: "blog icon", class: "icon"), blog_path%>
      <%= link_to "Blog", blog_path %> 
      <div class="bar2"></div> 
    </li>

    <li> 
      <%= link_to image_tag("icon_octocat.svg", alt: "octocat icon", class: "icon"), 'http://github.com/ganglians'%>
      <%= link_to "Git",      'http://github.com/ganglians',   target: '_blank' %>
      <div class="bar3"></div> 
    </li>

    <li> 
      <%= link_to image_tag("icon_linkedin.svg", alt: "linkedin icon", class: "icon"), 'http://linkedin.com/in/jccjr/'%>
      <%= link_to "Linkedin", 'http://linkedin.com/in/jccjr/', target: '_blank' %> 
      <div class="bar4"></div> 
    </li>

    <li></li>
  </ul>
</div>

<div class="hero-three">
  <div class="horizontal-horizon"></div>
  <div class="plane">
    <!-- Grid layout (this class is mostly for clarity)-->
    <div class = "grid">
      <!-- Horizontal ('left and right') grid lines -->
      <div class="horizontal-gridlines">
        <!-- Accessed through parent with nth of type child accessor -->
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>      
      </div>

      <!-- Vertical ('up and down') grid lines -->
      <div class="vertical-gridlines">
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
      </div>
    </div>
  </div>
</div>
</div>

<%= render "game" %>